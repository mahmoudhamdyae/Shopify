<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bottom_nav_style" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
    </style>
    <style name="button_primary" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_secondary" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/secondary_button</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="card_style" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    <style name="title_text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/dark_gary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="subtitle_text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>

    </style>
    <style name="search_bar" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/light_gray</item>
        <item name="android:textColor">@color/gary</item>
        <item name="android:textColorHint">@color/gary</item>
        <item name="android:drawableStart">@drawable/search_ic</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:hint">@string/search</item>



    </style>
</resources>